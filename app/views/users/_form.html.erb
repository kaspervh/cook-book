
<%=form_for @users do |user| %>
	<%= user.label :username %>
	<br>
	<%= user.text_field :username %>
	<br>
	<%= user.label :email %>
	<br>
	<%= user.text_field :email %>
	<br>
	<%= user.label :password %>
	<br>
	<%= user.password_field :password %>
	<br>
	<%= user.label :confirm_password %>
	<br>
	<%= user.password_field :password_confirmation %>
	<br>
	
	<% if current_user && current_user.role == "admin" || "teacher" %>
		<%= user.label :Elev %>
		<%= user.radio_button :role, "student" %>
		<%= user.label :Lære %>
		<%= user.radio_button :role, "teacher" %>
		<% if current_user.role == "admin" %>
			<%= user.label :admin %>
			<%= user.radio_button :role, "admin" %>
			<%= user.label :social_konsulent %>
			<%= user.radio_button :role, "mentor" %>
		<% end %>
	<% end %>
	<br>
	<br>
	<%= user.submit "Tilføj Bruger" %>
<% end %>
