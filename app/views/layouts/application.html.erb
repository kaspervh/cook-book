<!DOCTYPE html>
<html>
  <head>
    <title>RailsCookBook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   </head>


  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%=link_to "Home", home_index_path %></li>
            <li><%= link_to "Opskrifter", recipies_index_path%></li>
            <li><%= link_to "How to", how_to_index_path%></li>
            <li><%= link_to "about", home_about_path%></li>
          </ul>
          <ul class="nav navbar-nav">
            <% if current_user %>
              <% if current_user.role == "admin" %>
                <li><%= link_to "Ny side", new_admin_page_path %></li>
              <% end %>
              <li><%= link_to "Log ud", sessions_destroy_path %></li>
            <% else %>
             <li><%= link_to 'Log ind', sessions_new_path %></li>
             <li><%= link_to "Opret bruger", new_user_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container", style="margin-top: 200px;">
			<%= yield %>
      
    </div><!-- /.container -->


  </body>
  <footer class="footer">
      <div class="container">
        <p class="text-muted"></p>
      </div>
  </footer>
</html>
